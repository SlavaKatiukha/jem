[ -n "${NGRUBYDEPLOYLIB_VERSION:-}" ] && return 0;
NGRUBYDEPLOYLIB_VERSION="0.1";

function setEnvApp(){
    local bundle_type=$1;

    echo "rails_env ${bundle_type};" > /etc/nginx/ruby.env
    chown -hR ${DATA_OWNER} /etc/nginx/ruby.env 2>>"$JEM_CALLS_LOG"

}
