[ -n "${STRINGLIB_VERSION:-}" ] && return 0;
STRINGLIB_VERSION="0.1";

include os;

function toLowerCase() {
	local response=$(echo $@ | tr '[A-Z]' '[a-z]');
	echo $response;
}

function toUpperCase() {
	local response=$(echo $@ | tr '[a-z]' '[A-Z]');
	echo $response;
}

# $1 - propmt to display
function readString() {
    local prompt="${1:="Enter value:"}" result;
    read -r -p "${prompt} " result;
    echo ${result};
}
